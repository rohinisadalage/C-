#include <iostream>
using namespace std;
int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;
    if (num > 0) {
        if (num % 2 == 0) {
            cout << "The number " << num << " is positive and even." << endl;
        } else {
            cout << "The number " << num << " is positive and odd." << endl;
        }
    } else if (num < 0) {
        if (num % 2 == 0) {
            cout << "The number " << num << " is negative and even." << endl;
        } else {
            cout << "The number " << num << " is negative and odd." << endl;
        }
    } else {
        cout << "The number is zero." << endl;
    }
    return 0;
}
