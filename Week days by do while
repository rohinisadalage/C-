#include <iostream>
using namespace std;
int main() {
    int choice;
    do {
        cout << "\nSelect a day of the week:\n";
        cout << "1. Monday\n";
        cout << "2. Tuesday\n";
        cout << "3. Wednesday\n";
        cout << "4. Thursday\n";
        cout << "5. Friday\n";
        cout << "6. Saturday\n";
        cout << "7. Sunday\n";
        cout << "0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;
        switch (choice) {
            case 1:
                cout << "You selected Monday.\n";
                break;
            case 2:
                cout << "You selected Tuesday.\n";
                break;
            case 3:
                cout << "You selected Wednesday.\n";
                break;
            case 4:
                cout << "You selected Thursday.\n";
                break;
            case 5:
                cout << "You selected Friday.\n";
                break;
            case 6:
                cout << "You selected Saturday.\n";
                break;
            case 7:
                cout << "You selected Sunday.\n";
                break;
            case 0:
                cout << "Exiting the program. Goodbye!\n";
                break;
            default:
                cout << "Invalid choice. Please try again.\n";
        }
    } while (choice != 0);
    return 0;
}
