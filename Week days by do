#include <iostream>
using namespace std;
int main() {
    int choice;
    do {
        cout << "\nChoose a day of the week:\n";
        cout << "1. Monday\n";
        cout << "2. Tuesday\n";
        cout << "3. Wednesday\n";
        cout << "4. Thursday\n";
        cout << "5. Friday\n";
        cout << "6. Saturday\n";
        cout << "7. Sunday\n";
        cout << "0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;
        switch (choice) {
            case 1:
                cout << "You selected Monday." << endl;
                break;
            case 2:
                cout << "You selected Tuesday." << endl;
                break;
            case 3:
                cout << "You selected Wednesday." << endl;
                break;
            case 4:
                cout << "You selected Thursday." << endl;
                break;
            case 5:
                cout << "You selected Friday." << endl;
                break;
            case 6:
                cout << "You selected Saturday." << endl;
                break;
            case 7:
                cout << "You selected Sunday." << endl;
                break;
            case 0:
                cout << "Exiting program. Goodbye!" << endl;
                break;
            default:
                cout << "Invalid choice. Please try again." << endl;
        }
    } while (choice != 0);
    return 0;
}
