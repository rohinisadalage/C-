#include <iostream>
#include <string>
using namespace std;
int stringLength(const string& str) {
    int length = 0;
    for (char c : str) {
        length++;
    }
    return length;
}
int main() {
    string input;
    cout << "Enter a string: ";
    getline(cin, input);
    cout << "The length of the string is: " << stringLength(input) << endl;
    return 0;
}
