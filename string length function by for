#include <iostream>
#include <cstring>
using namespace std;
int stringLength(const char *str) {
    int length = 0;
    for (int i = 0; str[i] != '\0'; i++) {
        length++;
    }
    return length;
}
int main() {
    char inputString[100];
    cout << "Enter a string: ";
    cin.getline(inputString, 100);
    cout << "The length of the string is: " << stringLength(inputString) << endl;
    return 0;
}
