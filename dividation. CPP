#include <iostream>
int main() {
    float num1, num2, result;
    std::cout << "Enter the first number: ";
    std::cin >> num1;
    std::cout << "Enter the second number: ";
    std::cin >> num2;
    if (num2 != 0) {
        result = num1 / num2;
        std::cout << "Result of the division: " << result << std::endl;
    } else {
        std::cout << "Error! Division by zero is not allowed." << std::endl;
    }
    return 0;
}
