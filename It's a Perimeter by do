#include <iostream>
using namespace std;
int main() {
    float length, width, perimeter;
    char choice;
    do {
        cout << "Enter the length of the rectangle: ";
        cin >> length;
        cout << "Enter the width of the rectangle: ";
        cin >> width;
        perimeter = 2 * (length + width);meter of the rectangle is: " << perimeter << endl;
        cout << "Do you want to calculate the perimeter again? (y/n): ";
        cin >> choice;
    } while (choice == 'y' || choice == 'Y');
    cout << "Program exited. Thank you!" << endl;
    return 0;
}
